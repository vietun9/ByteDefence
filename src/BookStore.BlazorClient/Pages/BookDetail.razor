@page "/books/{Id}"
@using BookStore.BlazorClient.Models
@using BookStore.BlazorClient.Services
@inject BookStoreGraphQLService GraphQLService
@inject NavigationManager Navigation

<PageTitle>@(book?.Title ?? "Book Details")</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error</h4>
        <p>@errorMessage</p>
        <hr>
        <a href="books" class="btn btn-primary">Back to Books</a>
    </div>
}
else if (book == null)
{
    <div class="alert alert-warning">
        Book not found. <a href="books">Back to Books</a>
    </div>
}
else
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="books">Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">@book.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <h1>@book.Title</h1>
            
            <p class="lead text-muted">
                by <strong>@(book.Author?.Name ?? "Unknown")</strong> | Published @book.PublishedYear
            </p>

            <span class="badge @GetStatusBadgeClass(book.Status) mb-3">@book.Status</span>

            @if (!string.IsNullOrEmpty(book.Description))
            {
                <p class="mt-3">@book.Description</p>
            }

            @if (!string.IsNullOrEmpty(book.Isbn))
            {
                <p><strong>ISBN:</strong> @book.Isbn</p>
            }

            <div class="mt-4">
                <a href="@($"books/edit/{book.Id}")" class="btn btn-primary me-2">Edit</a>
                <button class="btn btn-danger me-2" @onclick="DeleteBook">Delete</button>
                <a href="books" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Book Statistics</h5>
                </div>
                <div class="card-body">
                    <p><strong>Average Rating:</strong> 
                        @if (book.AverageRating.HasValue)
                        {
                            <span>@book.AverageRating.Value.ToString("F1") / 5</span>
                        }
                        else
                        {
                            <span class="text-muted">No ratings</span>
                        }
                    </p>
                    <p><strong>Review Count:</strong> @book.ReviewCount</p>
                    <p><strong>Created:</strong> @book.CreatedAt.ToString("MMM dd, yyyy")</p>
                    <p><strong>Updated:</strong> @book.UpdatedAt.ToString("MMM dd, yyyy")</p>
                </div>
            </div>

            @if (book.Author != null)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">About the Author</h5>
                    </div>
                    <div class="card-body">
                        <h6>@book.Author.Name</h6>
                        @if (!string.IsNullOrEmpty(book.Author.Biography))
                        {
                            <p class="text-muted small">@book.Author.Biography</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    @if (book.Reviews.Any())
    {
        <div class="mt-5">
            <h3>Reviews (@book.Reviews.Count)</h3>
            <hr />
            @foreach (var review in book.Reviews.OrderByDescending(r => r.CreatedAt))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">@review.Title</h5>
                            <span class="badge bg-primary">@review.Rating / 5</span>
                        </div>
                        @if (!string.IsNullOrEmpty(review.Content))
                        {
                            <p class="card-text">@review.Content</p>
                        }
                        <p class="card-text">
                            <small class="text-muted">
                                By @review.ReviewerName on @review.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="mt-5">
            <h3>Reviews</h3>
            <hr />
            <p class="text-muted">No reviews yet for this book.</p>
        </div>
    }
}

@code {
    [Parameter]
    public string Id { get; set; } = string.Empty;

    private Book? book;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadBook();
    }

    private async Task LoadBook()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            book = await GraphQLService.GetBookByIdAsync(Id);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteBook()
    {
        try
        {
            var result = await GraphQLService.DeleteBookAsync(Id);
            if (result.Success)
            {
                Navigation.NavigateTo("books");
            }
            else if (result.Errors.Any())
            {
                errorMessage = string.Join(", ", result.Errors.Select(e => e.Message));
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private string GetStatusBadgeClass(BookStatus status) => status switch
    {
        BookStatus.PUBLISHED => "bg-success",
        BookStatus.DRAFT => "bg-warning text-dark",
        BookStatus.OUT_OF_PRINT => "bg-secondary",
        BookStatus.ARCHIVED => "bg-dark",
        _ => "bg-secondary"
    };
}
