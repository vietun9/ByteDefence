@page "/authors"
@using BookStore.BlazorClient.Models
@using BookStore.BlazorClient.Services
@inject BookStoreGraphQLService GraphQLService

<PageTitle>Authors</PageTitle>

<h1>Authors</h1>

<div class="mb-3">
    <button class="btn btn-outline-primary" @onclick="LoadAuthors" disabled="@isLoading">
        @if (isLoading) { <span class="spinner-border spinner-border-sm me-1"></span> }
        Refresh
    </button>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error Loading Authors</h4>
        <p>@errorMessage</p>
        <hr>
        <p class="mb-0">Please ensure the API is running at the configured endpoint.</p>
    </div>
}
else if (authors.Count == 0)
{
    <div class="alert alert-info">
        No authors found.
    </div>
}
else
{
    <div class="row">
        @foreach (var author in authors)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@author.Name</h5>
                        @if (!string.IsNullOrEmpty(author.Biography))
                        {
                            <p class="card-text text-muted">@author.Biography</p>
                        }
                        <p class="card-text">
                            <small class="text-muted">
                                @author.BookCount book(s)
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Author> authors = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadAuthors();
    }

    private async Task LoadAuthors()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            authors = await GraphQLService.GetAuthorsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
