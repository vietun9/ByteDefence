@page "/books"
@using BookStore.BlazorClient.Models
@using BookStore.BlazorClient.Services
@inject BookStoreGraphQLService GraphQLService
@inject NavigationManager Navigation

<PageTitle>Books</PageTitle>

<h1>Books</h1>

<div class="mb-3">
    <a href="books/create" class="btn btn-success">Add New Book</a>
    <button class="btn btn-outline-primary ms-2" @onclick="LoadBooks" disabled="@isLoading">
        @if (isLoading) { <span class="spinner-border spinner-border-sm me-1"></span> }
        Refresh
    </button>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error Loading Books</h4>
        <p>@errorMessage</p>
        <hr>
        <p class="mb-0">Please ensure the API is running at the configured endpoint.</p>
    </div>
}
else if (books.Count == 0)
{
    <div class="alert alert-info">
        No books found. <a href="books/create">Add the first book</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Year</th>
                    <th>Status</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in books)
                {
                    <tr>
                        <td>
                            <a href="@($"books/{book.Id}")">@book.Title</a>
                        </td>
                        <td>@(book.Author?.Name ?? "Unknown")</td>
                        <td>@book.PublishedYear</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(book.Status)">
                                @book.Status
                            </span>
                        </td>
                        <td>
                            @if (book.AverageRating.HasValue)
                            {
                                <span>@book.AverageRating.Value.ToString("F1") / 5 (@book.ReviewCount reviews)</span>
                            }
                            else
                            {
                                <span class="text-muted">No reviews</span>
                            }
                        </td>
                        <td>
                            <a href="@($"books/{book.Id}")" class="btn btn-sm btn-outline-primary me-1">View</a>
                            <a href="@($"books/edit/{book.Id}")" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteBook(book.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Book> books = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            books = await GraphQLService.GetBooksAsync();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteBook(string id)
    {
        try
        {
            var result = await GraphQLService.DeleteBookAsync(id);
            if (result.Success)
            {
                await LoadBooks();
            }
            else if (result.Errors.Any())
            {
                errorMessage = string.Join(", ", result.Errors.Select(e => e.Message));
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private string GetStatusBadgeClass(BookStatus status) => status switch
    {
        BookStatus.PUBLISHED => "bg-success",
        BookStatus.DRAFT => "bg-warning text-dark",
        BookStatus.OUT_OF_PRINT => "bg-secondary",
        BookStatus.ARCHIVED => "bg-dark",
        _ => "bg-secondary"
    };
}
